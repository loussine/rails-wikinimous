<h1 id="pagesTitle">Editing article</h1>

<%= form_with model: @article do |f| %>
  <h2><%= f.label :title %></h2>
  <%= f.text_field :title %>
  <h2><%= f.label :content %></h2>
  <%= f.text_field :content %>
  <button class="submit-article-btn"><%= f.submit "Create Article" %></button>
<% end %>

<%= link_to 'Return to the list', articles_path %>
